@model IEnumerable<IndividualCapstone.Models.Quote>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PackageCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PickupCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceLevelCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipmentCost)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PackageCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickupCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeliveryCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceLevelCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShipmentCost)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
